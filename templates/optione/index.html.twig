    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for optione in optiones %}
            <tr>
                <td>{{ optione.id }}</td>
                <td>{{ optione.name }}</td>
                <td>
                    <a href="{{ path('optione_show', {'id': optione.id}) }}">show</a>
